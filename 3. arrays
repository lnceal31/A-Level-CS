class Car:
    def __init__(self, n, e):  # Constructor
        self.__VehicleID = n
        self.__Registration = ''
        self.__DateOfRegistration = None
        self.__EngineSize = e
        self.__PurchasePrice = 0.00

    def SetPurchasePrice(self, p):
        self.__PurchasePrice = p

    def SetRegistration(self, r):
        self.__Registration = r
        
    def SetDateOfRegistration(self, d):
        self.__DateOfRegistration = d

    def GetVehicleID(self):
        return self.__VehicleID

    def GetRegistration(self):
        return self.__Registration

    def GetDateOfRegistration(self):
        return self.__DateOfRegistration

    def GetEngineSize(self):
        return self.__EngineSize

    def GetPurchasePrice(self):
        return self.__PurchasePrice

    def DisplayCarDetails(self):
        print('Vehicle ID:', self.__VehicleID)
        print('Registration Number:', self.__Registration)
        print('Date Of Registration:', self.__DateOfRegistration)
        print('Engine Size:', self.__EngineSize)
        print('Purchase Price:', self.__PurchasePrice)
        print()


# Input section
CarJobs = []

for i in range(10):
    c1 = input(f'Enter Vehicle ID for Car {i + 1}: ')
    c2 = int(input('Enter Engine Size: '))
    car = Car(c1, c2)
    
    price = int(input('Enter Purchase Price: '))
    car.SetPurchasePrice(price)

    reg_num = input('Enter Registration Number: ')
    car.SetRegistration(reg_num)

    reg_date = input('Enter Date of Registration (e.g., 2023-04-01): ')
    car.SetDateOfRegistration(reg_date)

    CarJobs.append(car)

# Bubble sort: Descending order of Purchase Price
n = len(CarJobs)
swap = True
temp=""

while swap:
    swap = False
    for i in range(n - 1):  
        if CarJobs[i].GetPurchasePrice() < CarJobs[i + 1].GetPurchasePrice():
            temp = CarJobs[i]
            CarJobs[i] = CarJobs[i + 1]
            CarJobs[i + 1] = temp
            swap = True

# Optionally display sorted list
print("\nCars sorted by descending Purchase Price:")
for car in CarJobs:
    print(f"{car.GetVehicleID()} - ${car.GetPurchasePrice()}")

# View details of a car
DisplayCar = input('\nEnter Vehicle ID of the car whose details you want to view: ')
found = False
for car in CarJobs:
    if car.GetVehicleID() == DisplayCar:
        print("\nCar Details:")
        car.DisplayCarDetails()
        found = True
        break

if not found:
    print("Car not found.")
